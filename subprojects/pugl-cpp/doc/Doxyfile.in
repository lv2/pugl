PROJECT_NAME           = Pugl
PROJECT_BRIEF          = "A minimal portable API for embeddable GUIs"

AUTOLINK_SUPPORT       = NO
QUIET                  = YES
WARN_AS_ERROR          = NO
WARN_IF_INCOMPLETE_DOC = NO
WARN_IF_UNDOCUMENTED   = NO
WARN_NO_PARAMDOC       = NO

JAVADOC_AUTOBRIEF      = YES

FULL_PATH_NAMES        = NO
CASE_SENSE_NAMES       = YES
EXCLUDE_SYMBOLS        = pugl::detail
EXTRACT_LOCAL_CLASSES  = NO
EXTRACT_PRIVATE        = NO
HIDE_IN_BODY_DOCS      = YES
HIDE_UNDOC_CLASSES     = YES
HIDE_UNDOC_MEMBERS     = YES
REFERENCES_LINK_SOURCE = NO

GENERATE_HTML          = NO
GENERATE_LATEX         = NO
GENERATE_XML           = YES
XML_PROGRAMLISTING     = NO
SHOW_FILES             = NO

MACRO_EXPANSION        = YES
PREDEFINED             = PUGL_API \
                         PUGL_CONST_API= \
                         PUGL_CONST_FUNC= \
                         PUGL_MALLOC_API= \
                         PUGL_MALLOC_FUNC=

RECURSIVE              = NO
STRIP_FROM_PATH        = @PUGL_CPP_SRCDIR@
INPUT                  = @PUGL_CPP_SRCDIR@/../../include/pugl/attributes.h \
                         @PUGL_CPP_SRCDIR@/../../include/pugl/pugl.h \
                         @PUGL_CPP_SRCDIR@/../../include/pugl/cairo.h \
                         @PUGL_CPP_SRCDIR@/../../include/pugl/gl.h \
                         @PUGL_CPP_SRCDIR@/../../include/pugl/glu.h \
                         @PUGL_CPP_SRCDIR@/../../include/pugl/stub.h \
                         @PUGL_CPP_SRCDIR@/../../include/pugl/vulkan.h \
                         @PUGL_CPP_SRCDIR@/include/pugl/pugl.hpp \
                         @PUGL_CPP_SRCDIR@/include/pugl/cairo.hpp \
                         @PUGL_CPP_SRCDIR@/include/pugl/gl.hpp \
                         @PUGL_CPP_SRCDIR@/include/pugl/stub.hpp \
                         @PUGL_CPP_SRCDIR@/include/pugl/vulkan.hpp

OUTPUT_DIRECTORY       = @DOX_OUTPUT@
